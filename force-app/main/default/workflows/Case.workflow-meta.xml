<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>EC_SalesRepEmailAlert</fullName>
        <description>SalesRepEmailAlert</description>
        <protected>false</protected>
        <recipients>
            <field>EC_Sales_Rep_Email__c</field>
            <type>email</type>
        </recipients>
        <senderAddress>prashant@graytitude.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/EC_UserRoleApproval</template>
    </alerts>
    <alerts>
        <fullName>Payer_Permission_Request</fullName>
        <ccEmails>InsightSupport@Ecolab.com</ccEmails>
        <description>Payer Permission Request</description>
        <protected>false</protected>
        <recipients>
            <recipient>connect_admin@ecolab.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Payer_Permission_Request</template>
    </alerts>
    <alerts>
        <fullName>Payer_Permission_Request_Completed</fullName>
        <description>Payer Permission Request Completed</description>
        <protected>false</protected>
        <recipients>
            <field>ContactId</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>prashant@graytitude.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/Electronic_Payment_are_Easy</template>
    </alerts>
    <rules>
        <fullName>EC_SalesRepRule</fullName>
        <actions>
            <name>EC_SalesRepEmailAlert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>OR((ISPICKVAL( Type , &quot;Online Registration&quot;)),AND(ISPICKVAL( Type , &quot;Mechanical&quot;),EC_Previous_Role__c = &quot;Basic&quot;,ISPICKVAL( EC_PortalAccessRole__c,&quot;Buyer&quot;)))</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Payer Permission notification when case is closed</fullName>
        <actions>
            <name>Payer_Permission_Request_Completed</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.Type</field>
            <operation>equals</operation>
            <value>Mechanical</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>Closed</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Payer Permission notifier</fullName>
        <actions>
            <name>Payer_Permission_Request</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.Type</field>
            <operation>equals</operation>
            <value>Mechanical</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.EC_PortalAccessRole__c</field>
            <operation>equals</operation>
            <value>Payer</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
