<apex:page controller="EC_Unsubscribe" action="{!updateContact}" showHeader="false" lightningStylesheets="true">  
    <apex:form >  
        <apex:pageBlock >  
            <apex:pageMessages />  
            	<div style="text-align:center;font-size: 25px;">
