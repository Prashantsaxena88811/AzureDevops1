<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:attribute name="isOpen" type="Boolean" default="true"  /> 
    <aura:attribute name="progressBar" type="Integer" default ="0"/>
    <aura:attribute name="isProgressingBar" type="Boolean" default="true"/>
    <aura:attribute name="flagForProgressBar1" type="Boolean" default="true"/>  
	<aura:if isTrue="{!v.isOpen}">
            <!-- Modal/Popup Box starts here-->
			<div class = "popUpPrime">
            <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open slds-modal_medium" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1">
            <div class="slds-modal__container slds-col slds-size_6-of-12 parentPop">
            <div class="slds-modal__header modalHeader">
            <!--Modal/Popup Box Body Starts here-->
            <div class = "slds-modal__content slds-p-around_medium" id="modal-content-id-1">
               <aura:if isTrue="{!v.flagForProgressBar1}">
                   <h1 class="Progressbar"> {! v.progressBar }%</h1>
                    <lightning:progressBar  value="{! v.progressBar }" />
                    <h2 class="help-text1">We are processing your registration and creating your digital experience</h2>  
                   <!--working on the second pop up code-->   
                </aura:if>
                </div>
            </div>
            </div>
         </section>
         <div class="slds-backdrop slds-backdrop_open"></div>
        </div>
    </aura:if>
</aura:component>