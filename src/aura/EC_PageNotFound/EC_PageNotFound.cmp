<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
    <div class="slds-grid error-wrapper">
        <div class="slds-col slds-size_12-of-12">
            <div class="errorFound">
                <div class="image slds-m-top_x-large">
                    <span class="icon-wrapper">
                        <i class="material-icons">info</i>
                        <div class="errorHeading">{!$Label.c.EC_Page_NotFound_Heading}</div>
                        <div class="errorText">{!$Label.c.EC_Page_NotFound_Text}</div>
                    </span>
                </div>
            </div>
            <!-- back to home button -->
            <div class="slds-size_1-of-1 slds-text-align_center"> 
                <a class="slds-button slds-button-max-size slds-button_brand slds-var-p-around_x-small slds-size_12-of-12 slds-medium-size_4-of-12 slds-large-size_2-of-12 " onclick="{!c.onClick}">{!$Label.c.EC_Error_Back_To_Homepage}</a>
            </div>
        </div>
    </div>
</aura:component>